---
const navigation = [
  { name: 'Unidades', href: '/unidades' },
  { name: 'Servicios', href: '/servicios' },
  { name: 'Contacto', href: '/contacto' },
];


const logo = "/assets/ayc.svg"; 
---

<header class="bg-customGreen absolute inset-x-0 top-0 z-50">
  <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1 sm:align-middle">
      <a href="/" class="-m-1.5 p-1.5"> 
        <span class="sr-only">Autobuses en Venta</span>
        <img class="h-8 lg:h-16 w-auto" src={logo} alt="logo">
      </a>
    </div>
    <div class="flex lg:hidden">
      <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700" onclick="toggleMenu()">
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      {navigation.map((item) => (
        <a href={item.href} class="text-lg font-semibold text-black hover:text-white">
          {item.name}
        </a>
      ))}
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      <a href="https://wa.me/5212228019600" class="rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-gray-200 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 border-1 border-black">
        <img src="/assets/whatapp.svg" alt="">
      </a>
    </div>
  </nav>

  <div id="mobile-menu" class="lg:hidden hidden" role="dialog" aria-modal="true">
    <div class="fixed inset-0 z-50"></div>
    <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-customGreen px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between">
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">Taller Motores Di√©sel | Venta de Autobuses</span>
          <img class="h-8 lg:h-16 w-auto" src={logo} alt="logo">
        </a>
        <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700" onclick="toggleMenu()">
          <span class="sr-only">Close menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="mt-6 ">
        <div class=" -my-6 divide-y divide-gray-500/10">
          <div class=" flex flex-col items-center space-y-2 py-6">
            {navigation.map((item) => (
              <a href={item.href} class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50 ">
                {item.name}
              </a>
            ))}
                  <a href="https://wa.me/5212228019600" class="rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-gray-200 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 border-1 border-black">
        <img src="/assets/whatapp.svg" alt="">
      </a>
          </div>
          
          <div class="py-6">

          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  function toggleMenu() {
    const menu = document.getElementById('mobile-menu');
    menu.classList.toggle('hidden');
  }
</script>