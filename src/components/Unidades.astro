        <div class="group relative">
          <img src={truck.image} alt={truck.alt} class="aspect-square w-full rounded-md bg-gray-200 object-cover  lg:aspect-auto lg:h-80">
          <div class="mt-4 flex justify-between">
            <div>
              <h3 class="text-sm text-gray-700">

                  <span aria-hidden="true" class="absolute inset-0"></span>
                  {truck.title}

              </h3>
              <p class="mt-1 text-sm text-gray-500">{truck.year}</p>
            </div>
            <p class="text-sm font-medium text-gray-900">{truck.price}</p>
          </div>
