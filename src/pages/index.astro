---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Oferta from '../components/Oferta.astro';

const title = "Autobuses en Venta";
const description = "Compra autobuses nuevos y usados para transporte público y privado. Encuentra opciones ideales para tu negocio.";
const keywords = "autobuses, venta, transporte público, vehículos usados, autobuses nuevos";
---

<Layout title={title}>
  <Hero description={description} />
  <Oferta keywords={keywords} />
</Layout>
