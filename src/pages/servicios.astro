---
import Layout from '../layouts/Layout.astro';
import Servicio from '../components/Servicios.astro';

const title = "Servicios | Autobuses en Venta";
const description = "Ofrecemos una gama de servicios especializados en autobuses, incluyendo venta de vehículos nuevos y usados, reparación y mantenimiento de autobuses, y más. Descubre todo lo que podemos hacer por ti.";
const keywords = "servicios autobuses, mantenimiento autobuses, venta de autobuses, reparación autobuses, servicio de transporte";
---

<Layout title={title}>
  <Servicio description={description} keywords={keywords}/>
</Layout>
